/* COLORS */
$gray =       #B8B8B8
$lightGray =  #E0E0E0
$darkGray =   #5C5C5C
$black =      #000000
$blue =       #32CCD6
$pink =       #F170AB
$border =     6px
$footerH =    30rem

/* GRID */
$pageMargin = 7rem

/* BREAKPOINTS */
$xs-max =     767px
$md-min =     $xs-max + 1
$md-max =     1024px
$xl-min =     1400px

/* Z-INDEX */
$z-border =   101
$z-nav =      100
$z-portH2 =   99
$z-home =     95
$z-footer =   1

/*  GLOBAL RESETS  */
body,p,table,tr,td,ul,ol,li,dl,dd,dt,div,span,a,h1,h2,h3,h4,h5,h6,fieldset
  margin: 0
  padding: 0
  background-repeat: no-repeat
a img
  border: none
a
  text-decoration: none
fieldset
  border: none
:focus
  outline: 0 none
input::-moz-focus-inner,button::-moz-focus-inner
  border: none
ul li
  list-style: none

/*  FONTS  */
@font-face
  font-family: 'Brandon'
  src: url('/fonts/brandon.eot')
  src: url('/fonts/brandon.eot?#iefix') format('embedded-opentype'), url('/fonts/brandon.woff') format('woff'), url('/fonts/brandon.ttf') format('truetype'), url('/fonts/brandon.svg#brandon') format('svg')
  font-weight: normal
  font-style: normal

/* GLOBAL */
html
  font-size: 10px
  height: 100%
  /* change global sizes */
  @media (max-width: $md-max)
    font-size: 9px
  
body
  font: 1.9rem/2.4rem 'Bitter', serif
  color: $darkGray
  min-height: 500px
  position: relative
  padding-bottom: $border
  -webkit-font-smoothing: antialiased
  .borderLR
    position: fixed
    width: $border
    top: 0
    bottom: 0
    z-index: $z-border
    &.left
      left: 0
    &.right
      right: 0
  .borderTB
    position: fixed
    height: $border
    left: 0
    right: 0
    z-index: $z-border
    &.top
      top: 0
    &.bottom
      bottom: 0
p
  max-width: 88rem
  margin-bottom: 2rem
  a
    border-bottom: 2px dotted $darkGray
    color: $darkGray
    transition: color .4s, border-color .4s;
    &:hover
      color: $pink
      border-color: $pink 
a.big
  font-weight: bold
  font-style: italic
  font-size: 2.2rem
  color: $darkGray
  display: inline-block
  margin-top: 4rem
  position: relative
  transition: color .5s
  /* bottom border */
  &:before
    content: ''
    height: 2px
    width: 100%
    background: $darkGray
    position: absolute
    bottom: 0
    right: 0
    transition: all .2s linear .1s
  /* right border */
  &:after
    content: ''
    position: absolute
    background: $darkGray
    bottom: 0
    width: 2px
    height: 0
    right: 0
    transition: all .1s linear .2s
  .arrow
    background: url('/images/arrowLink.svg') no-repeat left center
    width: 2.5rem
    height: 3rem
    margin-left: 1.5rem
    display: inline-block
    vertical-align: sub
    /* top border */
    &:before
      content: ''
      position: absolute
      background: $darkGray
      width: 0
      height: 2px
      right: 0
      top: 0
      transition: all .1s linear .1s
    /* left border */
    &:after
      content: ''
      position: absolute
      background: $darkGray
      width: 2px
      height: 0
      top: 0
      right: calc(3rem - 2px)
      transition: all .1s linear
  &:hover
    color: $pink
    &:before
      background: $pink
      width: 3rem
      transition: width linear .2s
    &:after
      height: 3rem
      background: $pink
      transition: all .1s linear
    .arrow
      &:before
        width: 3rem
        background: $pink
        transition: all .1s linear .1s
      &:after
        height: 3rem
        background: $pink
        transition: all .1s linear .2s
      
h1
  font: 5.4rem/5rem 'Brandon', sans-serif
  letter-spacing: -.05em
  font-weight: normal
  &.margin
    margin-bottom: 1.2rem
  &.fixed
    position: fixed
    top: 0
    left: 60px
h2
  font: 3.8rem/6rem 'Brandon', sans-serif
  font-weight: normal
  margin: 0 0 2rem -1rem
  padding: 0 1.5rem
  color: #fff
  display: inline-block
  z-index: $z-nav
  white-space: nowrap
  &#heading
    position: fixed
    top: 0
h3
  font: 3.2rem/3.2rem 'Brandon', sans-serif
  margin-bottom: 2rem
hr
  margin: 8rem 0 -1rem 0
  border: none
  background: $gray
  height: 1px
  
/* GLOBAL ANIMATIONS */
@keyframes bounce {
  0% {transform: scale(1);}
  25% {
    transform: scale(0.95);
  }
  50% {
    transform: scale(1.1);
  }
  75% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.05);
  }
}

/* GRID LAYOUT */
header
  margin-top: 6rem
section
  padding: 5rem $pageMargin
section.grid
  padding-left: 0
  padding-right: 0
  .half
    width: calc(50% - 14rem)
    padding: 0 $pageMargin
    display: inline-block
    vertical-align: top
    &.center
      text-align: center
    /* TODO */
    @media (max-width: $xs-max)
      width: 100%
  img.half,
  video.half
    width: 50%
    height: 100%
    padding: 0
  h3
    margin-top: $pageMargin
img.full
  width: 100%
  display: block
.noPad
  padding: 0
.noTopPad
  padding-top: 0
.noBottomPad
  padding-bottom: 0
    
/* ELEMENTS */
ul.workList
  margin-bottom: 4rem
  li
    display: inline
    margin-right: 2rem
    &:before
      content: '+'
nav
  position: fixed
  top: 0
  left: 0
  z-index: $z-nav
  a
    display: block
    height: 6rem
    width: 6rem
    background: url('/images/logo.svg')
    background-size: cover
    padding: 0
    transition: none
a.sideNav
  position: fixed
  width: 7rem
  height: 8rem
  top: 40%
  transition: all .15s
  opacity: .7
  color: white
  font: 2.2rem/8rem 'Brandon', sans-serif
  font-weight: bold
  box-shadow: 0 0px 4px rgba(0,0,0,0.16), 0 1px 6px rgba(0,0,0,0.23)
  &.prev
    left: -6.5rem
    background-image: url('/images/arrowPrev.svg')
    background-position: right center
    padding-right: 3.5rem
    text-align: right
    &:hover
      transform: translate3d(6.5rem, 0, 0)
      opacity: 1
  &.next
    right: -6.5rem
    padding-left: 3.5rem
    background-image: url('/images/arrowNext.svg')
    background-position: left center
    &:hover, &.base
      transform: translate3d(-6.5rem, 0, 0)
      opacity: 1
.themeBackground
  transition: background 1s
  
div.web
  background: $gray
  border-radius: 6px
  max-width: 1212px
  position: relative
  padding: 6px
  div.head
    padding: 2px 6px 8px 6px
    div.nav
      background: url('/images/webNav.svg')
      width: 64px
      height: 16px
      display: inline-block
      margin-right: 14px
    div.url
      font-family: 'Lucida Grande', sans-serif
      font-size: 14px
      color: $gray
      background: $lightGray
      line-height: 24px
      padding: 0 10px
      border-radius: 2px
      height: 24px;
      display: inline-block
      width: calc(100% - 98px)
  img
    max-width: 100%
    display: block
    border-radius: 0 0 5px 5px
    &.overlay
      position: absolute
      top: 0
      left: 0
  video
    max-width: 100%
    position: absolute
    top: 0
    left: 0
    &.washHeading
      width: 71.4%
      margin: 42px 0 0 15.4%
  div.wrapper
    position: relative
  div.reveal
    position: absolute
    overflow: hidden
    border-right: solid 1px $lightGray
  &.clear
    overflow: hidden
    img
      float: left
  &.small
    max-width: 950px
  &.app
    border: none
    div.reveal
      border: none

div.mobile
  background: $gray
  border-radius: 28px
  padding: 22px 10px 0 10px
  display: inline-block
  &:before
    content: ''
    width: 60px
    height: 7px
    background: $darkGray
    border-radius: 4px
    display: block
    margin: 0 auto 18px auto
  &:after
    content: ''
    width: 56px
    height: 56px
    background: $darkGray
    border-radius: 50%
    display: block
    margin: 4px auto 12px auto  
  img
    height: 667px
    width: 375px
    border-radius: 4px

/*  MAIN PAGE  */
div#page.home
  position: relative
  z-index: $z-home
  margin-bottom: $footerH
  padding: 0
  background: white
  &.about
    canvas
      position: absolute
section.home
  margin: 0
  padding: 0
  position: absolute
  width: 100%
  div.copy
    position: absolute
    left: 6%
    top: 260px
    h1
      color: $blue
    p
      line-height: 2rem
  ul.downArrows
    position: fixed
    width: 100%
    bottom: 3rem
    opacity: 1
    cursor: pointer
    transition: opacity 1s
    li
      background-image: url('/images/arrowDown.svg')
      background-size: contain
      width: 60px
      height: 24px
      margin: -2px auto
      opacity: 0
      &:nth-child(1)
        animation: arrows1 3s .5s infinite ease-in
      &:nth-child(2)
        animation: arrows2 3s .8s infinite ease-in
      &:nth-child(3)
        animation: arrows3 3s 1.1s infinite ease-in
    &.hide
      opacity: 0

/* DOWNWARD ARROW ANIMATIONS */
@keyframes arrows1 {
  0%  {transform: translate3d(0, 0, 0); opacity: 0;}
  15% {transform: translate3d(0, 6px, 0); opacity: .33;}
  90% {transform: translate3d(0, 6px, 0); opacity: .33;}
  100% {transform: translate3d(0, 6px, 0); opacity: 0;}
}
@keyframes arrows2 {
  0%  {transform: translate3d(0, 0, 0); opacity: 0;}
  15% {transform: translate3d(0, 6px, 0); opacity: .66;}
  80% {transform: translate3d(0, 6px, 0); opacity: .66;}
  90% {transform: translate3d(0, 6px, 0); opacity: 0;}
  100% {transform: translate3d(0, 6px, 0); opacity: 0;}
}
@keyframes arrows3 {
  0%  {transform: translate3d(0, 0, 0); opacity: 0;}
  15% {transform: translate3d(0, 6px, 0); opacity: 1;}
  70% {transform: translate3d(0, 6px, 0); opacity: 1;}
  80% {transform: translate3d(0, 6px, 0); opacity: 0;}
  100% {transform: translate3d(0, 6px, 0); opacity: 0;}
}

section.portfolio
  padding-top: 0
  a.portBlock
    height: 42rem
    display: block
    position: relative
    overflow: hidden
    margin: 9px
    padding: 0
    background-size: cover
    background-position: 50% 50%
    &.contain
      background-size: contain
    &.half
      display: inline-block
      width: calc(50% - 18px)
      @media (max-width: $md-max)
        width: 100%
    &.oneThird
      display: inline-block
      width: calc(33.33% - 18px)
      @media (max-width: $md-max)
        width: 100%
    &.twoThird
      display: inline-block
      width: calc(66.66% - 18px)
      @media (max-width: $md-max)
        width: 100%    
    video
      position: absolute
      top: 50%; left: 50%
      transform: translate(-50%, -50%)
      min-width: 100%;
      min-height: 100%;
    h2
      position: absolute
      left: 2.4rem
      top: 2.4rem
      padding: 0 2rem
      z-index: $z-portH2
      margin: 0
    .border
      border-width: 1.2rem
      border-style: solid
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      transition: all .4s ease-in-out
    &:hover
      .border
        border-width: 2.4rem
        background: rgba(0,0,0,.3)      

footer
  background: $black
  padding: 0 7rem
  display: flex
  height: $footerH
  justify-content: space-around
  align-items: center
  position: fixed
  bottom: 0
  left: 0
  right: 0
  z-index: $z-footer
  a
    height: 10rem
    width: 10rem
    background-image: url('/images/footerLogos.svg')
    background-size: cover
    &.linkedin
      background-position: -10rem 0
    &.instagram
      background-position: -20rem 0
    &.spotify
      background-position: -30rem 0
    &:hover {
      animation: bounce linear .4s
      animation-fill-mode: forwards
    }
  &.about
    padding: 0
    width: 80%
    position: fixed
    bottom: 4rem
    left: 10%
    min-width: 768px
