/* COLORS */
$gray =       #bebdbd
$lightGray =  #dedede
$darkGray =   #5c5c5c
$blue =       #32CCD6
$pink =       #F170AB
$border =     6px

/* GRID */
$pageMargin = 7rem

/* BREAKPOINTS */
$xs-max =     767px
$md-min =     $xs-max + 1
$md-max =     1024px
$xl-min =     1400px

/* Z-INDEX */
$z-border =   101
$z-nav =      100
$z-portH2 =   99

/*  GLOBAL RESETS  */
body,p,table,tr,td,ul,ol,li,dl,dd,dt,div,span,a,h1,h2,h3,h4,h5,h6,fieldset
  margin: 0
  padding: 0
  background-repeat: no-repeat
a img
  border: none
a
  text-decoration: none
fieldset
  border: none
:focus
  outline: 0 none
input::-moz-focus-inner,button::-moz-focus-inner
  border: none
ul li
  list-style: none

/*  FONTS  */
@font-face
  font-family: 'Brandon'
  src: url("/fonts/brandon.eot")
  src: url("/fonts/brandon.eot?#iefix") format("embedded-opentype"), url("/fonts/brandon.woff") format("woff"), url("/fonts/brandon.ttf") format("truetype"), url("/fonts/brandon.svg#brandon") format("svg")
  font-weight: normal
  font-style: normal

/* GLOBAL */
html
  font-size: 10px
  height: 100%
body
  font: 1.9rem/2.4rem 'Bitter', serif
  color: $darkGray
  min-height: 500px
  position: relative
  padding-bottom: $border
  -webkit-font-smoothing: antialiased
  .borderLR
    position: fixed
    width: $border
    top: 0
    bottom: 0
    &.left
      left: 0
    &.right
      right: 0
  .borderTB
    position: fixed
    height: $border
    left: 0
    right: 0
    z-index: $z-border
    &.top
      top: 0
    &.bottom
      bottom: 0
p
  max-width: 88rem
  margin-bottom: 2rem
  a
    border-bottom: 2px dotted $darkGray
    color: $darkGray
    transition: color .4s, border-color .4s;
    &:hover
      color: $pink
      border-color: $pink 
a.big
  font-weight: bold
  font-style: italic
  font-size: 2.2rem
  color: $darkGray
  display: inline-block
  margin-top: 4rem
  position: relative
  transition: color .5s
  .text
    display: inline
    margin-right: 1.5rem
  .arrow
    background: url('/images/arrowLink.svg') no-repeat left center
    width: 2.5rem
    height: 3rem
    display: inline-block
    vertical-align: bottom
  &:after
    content: ''
    height: 2px
    width: 100%
    background: $darkGray
    display: block
    float: right
    transition: width linear .2s
  .b
    position: absolute
    background: $darkGray
    bottom: 0
    &.right
      width: 2px
      height: 0
      right: 0
      transition: all .1s linear
    &.top
      width: 0
      height: 2px
      right: 0
      top: 0
      transition: all .1s linear .1s
    &.left
      width: 2px
      height: 0
      top: 0
      right: calc(3rem - 2px)
      transition: all .1s linear .2s
  &:hover
    color: $pink
    &:after
      background: $pink
      width: calc(0% + 3rem)
    .b
      background: $pink
      &.right
        height: 3rem
      &.top
        width: 3rem
      &.left
        height: 3rem
h1
  font: 5.4rem/5rem 'Brandon', sans-serif
  letter-spacing: -.05em
  font-weight: normal
  &.margin
    margin-bottom: 1.2rem
  &.fixed
    position: fixed
    top: 0
    left: 60px
h2
  font: 3.8rem/6rem 'Brandon', sans-serif
  font-weight: normal
  margin: 0 0 2rem -1rem
  padding: 0 2rem
  color: #fff
  display: inline-block
  z-index: $z-nav
  &#heading
    position: fixed
    top: 0
h3
  font: 3.2rem/3.2rem 'Brandon', sans-serif
  margin-bottom: 2rem
hr
  margin-top: 6rem
  border: none
  background: $gray
  height: 1px

/* GRID LAYOUT */
header
  margin-top: 6rem
section
  padding: 5rem $pageMargin
section.grid
  padding-left: 0
  padding-right: 0
  .half
    width: calc(50% - 14rem)
    padding: 0 $pageMargin
    display: inline-block
    vertical-align: top
    /* TODO */
    @media (max-width: $xs-max)
      width: 100%
  img.half
    width: 50%
    height: 100%
    padding: 0
  h3
    margin-top: $pageMargin
img.full
  width: 100%
  display: block
.noPad
  padding: 0
.noTopPad
  padding-top: 0
.noBottomPad
  padding-bottom: 0
    
/* ELEMENTS */
ul.workList
  margin-bottom: 4rem
  li
    display: inline
    margin-right: 2rem
    &:before
      content: '+'
nav
  position: fixed
  top: 0
  left: 0
  z-index: $z-nav
  a
    display: block
    height: 60px
    width: 60px
    background: url('/images/logo.svg')
    padding: 0
    transition: none
a.sideNav
  position: fixed
  width: 7rem
  height: 8rem
  top: 40%
  transition: all .15s
  opacity: .7
  color: white
  font: 2.2rem/8rem 'Brandon', sans-serif
  font-weight: bold
  box-shadow: 0 0px 4px rgba(0,0,0,0.16), 0 1px 6px rgba(0,0,0,0.23)
  &.prev
    left: -6.5rem
    background-image: url("/images/arrowPrev.svg")
    background-position: right center
    padding-right: 3.5rem
    text-align: right
    &:hover
      transform: translate3d(6.5rem, 0, 0)
      opacity: 1
  &.next
    right: -6.5rem
    padding-left: 3.5rem
    background-image: url("/images/arrowNext.svg")
    background-position: left center
    &:hover, &.base
      transform: translate3d(-6.5rem, 0, 0)
      opacity: 1
.themeBackground
  transition: background 1s

/*  MAIN PAGE  */
div#page.home
  padding: 0
  &.about
    canvas
      position: absolute
section.home
  margin: 0
  padding: 0
  position: absolute
  width: 100%
  div.copy
    position: absolute
    left: 6%
    top: 260px
    h1
      color: $blue
    p
      line-height: 2rem
  ul.downArrows
    position: fixed
    width: 100%
    bottom: 3rem
    opacity: 1
    cursor: pointer
    transition: opacity 1s
    li
      background-image: url("/images/arrowDown.svg")
      background-size: contain
      width: 60px
      height: 24px
      margin: -2px auto
      opacity: 0
      &:nth-child(1)
        animation: arrows1 3s .5s infinite ease-in
      &:nth-child(2)
        animation: arrows2 3s .8s infinite ease-in
      &:nth-child(3)
        animation: arrows3 3s 1.1s infinite ease-in
    &.hide
      opacity: 0

/* DOWNWARD ARROW ANIMATIONS */
@keyframes arrows1 {
  0%  {transform: translate3d(0, 0, 0); opacity: 0;}
  15% {transform: translate3d(0, 6px, 0); opacity: .33;}
  90% {transform: translate3d(0, 6px, 0); opacity: .33;}
  100% {transform: translate3d(0, 6px, 0); opacity: 0;}
}
@keyframes arrows2 {
  0%  {transform: translate3d(0, 0, 0); opacity: 0;}
  15% {transform: translate3d(0, 6px, 0); opacity: .66;}
  80% {transform: translate3d(0, 6px, 0); opacity: .66;}
  90% {transform: translate3d(0, 6px, 0); opacity: 0;}
  100% {transform: translate3d(0, 6px, 0); opacity: 0;}
}
@keyframes arrows3 {
  0%  {transform: translate3d(0, 0, 0); opacity: 0;}
  15% {transform: translate3d(0, 6px, 0); opacity: 1;}
  70% {transform: translate3d(0, 6px, 0); opacity: 1;}
  80% {transform: translate3d(0, 6px, 0); opacity: 0;}
  100% {transform: translate3d(0, 6px, 0); opacity: 0;}
}

section.portfolio
  padding-top: 0
  a.portBlock
    height: 42rem
    display: block
    position: relative
    overflow: hidden
    margin: 9px
    padding: 0
    background-size: cover
    background-position: 50% 50%
    &.half
      display: inline-block
      width: calc(50% - 18px)
      @media (max-width: $md-max)
        width: 100%
    video
      position: absolute
      top: 50%; left: 50%
      transform: translate(-50%, -50%)
      min-width: 100%;
      min-height: 100%;
    h2
      position: absolute
      left: 2.4rem
      top: 2.4rem
      padding: 0 2rem
      z-index: $z-portH2
      margin: 0
    .border
      border-width: 1.2rem
      border-style: solid
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      transition: all .5s ease-in-out
    &:hover
      .border
        border-width: 2.4rem
        background: rgba(0,0,0,.3)      

div.web
  border: 2px solid $gray
  border-radius: 4px
  max-width: 1200px
  position: relative
  margin-top: 2rem
  div.head
    background: $gray
    padding: 8px 20px 10px 20px
    div.nav
      height: 20px
      width: 60px
      background-image: url("/images/webArrows.png")
      background-size: contain
      float: left
      margin-top: 4px
    div.url
      font-family: 'Lucida Grande', sans-serif
      font-size: 14px
      color: $gray
      background: #fff
      margin-left: 80px
      line-height: 16px
      padding: 5px 5px 5px 10px
      border-radius: 3px
  img
    max-width: 100%
    &.overlay
      position: absolute
      top: 0
      left: 0
  video
    max-width: 100%
    position: absolute
    top: 0
    left: 0
    &.washHeading
      width: 72%
      margin: 44px 0 0 15.4%
  div.wrapper
    position: relative
  div.reveal
    position: absolute
    overflow: hidden
    border-right: solid 1px $lightGray
  &.clear
    overflow: hidden
    img
      float: left
  &.small
    max-width: 950px
  &.app
    border: none
    div.reveal
      border: none
footer
  padding: 5rem 10% 4rem 10%
  text-align: center
  p
    width: 48rem
    margin: auto
  ul
    margin-top: 4rem
    li
      display: inline-block
      width: 30%
      a
        height: 100px
        width: 100px
        display: inline-block
        background-image: url("/images/footerLogos.png")
        background-size: 340px 100px
        background-color: transparent
        background-position: 0 0
        padding: 0 !important
        opacity: .5
        transition: opacity .2s
        &:hover
          background-color: transparent
          opacity: 1
      &.github
        text-align: right
      &.instagram
        a
          background-position: -120px 0
      &.linkedin
        text-align: left
        a
          background-position: -240px 0
  &.about
    padding: 0
    width: 80%
    position: fixed
    bottom: 4rem
    left: 10%
    min-width: 768px
